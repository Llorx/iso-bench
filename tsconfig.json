{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ESNext",
        "removeComments": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "./types",
        "outDir": "./lib",
        "esModuleInterop": true,
        "lib": ["DOM", "ESNext"]
    },
    "include": [
        "./src/index.ts",
        "./src/tests/index.ts"
    ]
}